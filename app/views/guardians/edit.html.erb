<% content_for :title, "Editing Guardian" %>

<div class="guardian-edit-container w-100 px-0 mx-0">
  <div class="guardian-edit-header d-flex align-items-center">
    <i class="bi bi-person-fill-gear ms-3 me-2 fs-3"></i>
    <h1>Update Guardian Information</h1>
  </div>

  <div class="guardian-edit-form mt-3">
    <%= form_with(model: @guardian, local: true) do |form| %>
      <div class="form-group mb-3">
        <%= form.label :name, "Name", class: "form-label fw-bold" %>
        <%= form.text_field :name, class: "form-control shadow-sm", placeholder: "Enter guardian name" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :email, "Email address", class: "form-label fw-bold" %>
        <%= form.text_field :email_address, class: "form-control shadow-sm", placeholder: "Enter email address" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :contact_number, "Contact number", class: "form-label fw-bold" %>
        <%= form.text_field :contact_number, class: "form-control shadow-sm", placeholder: "Enter contact number" %>
      </div>

      <div class="mt-4 text-end">
        <%= form.submit "Update Guardian", class: "btn btn-success px-4 py-2 fw-bold rounded-1" %>
      </div>
    <% end %>
  </div>

  <div class="guardian-actions-container mt-3" style="text-align: left;">
    <div class="guardian-actions d-flex gap-2 ms-3 mb-3" style="justify-content: flex-start; width: 100%;">
      <%= link_to "Back to Guardians", guardians_path, class: "action-btn back-btn" %>
      <%= link_to "Show this Guardian", @guardian, class: "action-btn btn-sm", style: "background-color: #343a40; color: white;" %>
    </div>
  </div>
</div>
