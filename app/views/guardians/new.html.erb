<% content_for :title, "New Guardian" %>

<div class="guardian-new-container">
  <div class="guardian-new-header d-flex align-items-center">
    <i class="bi bi-person-plus-fill ms-3 me-2 fs-3"></i>
    <h1>Create New Guardian</h1>
  </div>

  <div class="guardian-new-form mt-3">
    <%= form_with(model: @guardian, local: true) do |form| %>
      <div class="form-group mb-3">
        <%= form.label :name, "Name", class: "form-label fw-bold" %>
        <%= form.text_field :name, class: "form-control shadow-sm", placeholder: "Enter guardian name" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :email_address, "Email address", class: "form-label fw-bold" %>
        <%= form.text_field :email_address, class: "form-control shadow-sm", placeholder: "Enter email address" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :contact_number, "Contact Number", class: "form-label fw-bold" %>
        <%= form.text_field :contact_number, class: "form-control shadow-sm", placeholder: "Enter contact number" %>
      </div>

      <div class="mt-4 text-end">
        <%= form.submit "Create Guardian", class: "btn btn-success px-4 py-2 fw-bold rounded-2" %>
      </div>
    <% end %>
  </div>

  <div class="guardian-actions-container mt-3">
    <div class="guardian-actions d-flex gap-2 ms-3 mb-3" style="justify-content: flex-start; width: 100%;">
      <%= link_to "Back to Guardians", guardians_path, class: "action-btn back-btn" %>
    </div>
  </div>
</div>
