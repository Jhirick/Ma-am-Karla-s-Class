<% content_for :title, "Sections" %>

<div class="sections-container">

  <!-- HEADER (MATCH STUDENT / DEPARTMENT / TEACHER / SUBJECT) -->
  <div class="page-header-bar d-flex justify-content-between align-items-center mb-0">

    <h1 class="m-0 text-white me-4">Sections</h1>

    <!-- SEARCH BAR (COPIED FROM STUDENT) -->
    <div class="input-group search-bar me-auto">
      <input
        type="text"
        class="form-control"
        placeholder="Search Sections..."
        aria-label="Search Sections"
      >
      <span class="input-group-text">
        <i class="bi bi-search"></i>
      </span>
    </div>

    <!-- NEW SECTION BUTTON -->
    <%= link_to "New Section",
        new_section_path,
        class: "btn btn-light ms-4" %>

  </div>

  <!-- SECTION CARDS -->
  <div class="row mt-3">
    <% @sections.each do |section| %>
      <div class="col-md-3 col-sm-6 mb-4">

        <div class="card section-card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">

            <h5 class="card-title fw-bold mb-2">
              <%= section.name %>
            </h5>

            <p class="mb-1">
              <strong>Subject:</strong> <%= section.subject.name %>
            </p>

            <p class="mb-1">
              <strong>Teacher:</strong> <%= section.subject.teacher.name %>
            </p>

            <p class="mb-1">
              <strong>Room:</strong> <%= section.room %>
            </p>

            <p class="mb-3">
              <strong>Time Slot:</strong> <%= section.time_slot %>
            </p>

            <%= link_to "View Section",
                section_path(section),
                class: "btn btn-sm w-100 mt-auto show-btn" %>

          </div>
        </div>

      </div>
    <% end %>
  </div>

</div>
