<% content_for :title, "Section Details" %>

<div class="section-show-container">
  <div class="card shadow-sm mb-4">
    <div class="card-header d-flex align-items-center" style="background-color: #4b3b2a; color: white;">
      <h3 class="mb-0"><i class="bi bi-journal-text ms-1 me-3 fs-2"></i>Section Information</h3>
    </div>

    <div class="card-body">
      <p><strong>Section Name:</strong> <%= @section.name %></p>
      <p><strong>Subject:</strong> <%= @section.subject.name %></p>
      <p><strong>Teacher:</strong> <%= @section.subject.teacher.name %></p>
      <p><strong>Room:</strong> <%= @section.room %></p>
      <p><strong>Time Slot:</strong> <%= @section.time_slot %></p>
    </div>
  </div>

  <div class="d-flex justify-content-between align-items-center w-100 px-3">  
    <!-- Left side -->
    <div class="flex-start">
      <%= link_to "Back to Sections", sections_path, class: "action-btn back-btn" %>
    </div>
    <!-- Right side -->
    <div class="flex-end d-flex gap-2">
      <%= link_to "Edit this Section", edit_section_path(@section), class: "action-btn edit-btn" %>
      <%= button_to "Delete this Section", @section,
            method: :delete,
            data: { confirm: "Are you sure you want to delete this section?" },
            class: "action-btn delete-btn" %>
    </div>
  </div>
