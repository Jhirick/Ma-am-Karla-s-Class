<% content_for :title, "Create Subject" %>

<div class="student-edit-container">

  <!-- Purple Header (Matches Student New) -->
  <div class="student-edit-header d-flex align-items-center">
    <i class="bi bi-book-fill ms-3 me-2 fs-3"></i>
    <h1>Create Subject</h1>
  </div>

  <!-- White Card Form -->
  <div class="student-edit-form mt-4">
    <%= render "form", subject: @subject %>
  </div>

  <!-- Back Button -->
  <div class="mt-4">
    <%= link_to "Back to Subjects",
        subjects_path,
        class: "btn-custom back-btn" %>
  </div>

</div>
