<% content_for :title, "Subjects" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div class="subjects-header" style="background-color: #5d4037; padding: 10px 20px; border-radius: 5px; width: 100%;">
    <h1 class="m-0 text-white">Subjects</h1>
  </div>
  <%= link_to "New Subject", new_subject_path, class: "btn btn-dark ms-3" %>
</div>
<div class="row mt-4">
  <% @subjects.each do |subject| %>
    <div class="col-md-3 mb-3">
      <div class="card h-100 shadow-sm border-0 rounded-4">
        <div class="card-body">
          <h5 class="card-title fw-bold text-dark"><%= subject.name %></h5>
          <p class="mb-1 text-muted"><strong>Teacher:</strong> <%= subject.teacher.name %></p>
          <p class="mb-1 text-muted"><strong>Units:</strong> <%= subject.number_of_units %></p>
          <%= link_to "View Subject", subject_path(subject),
            class: "btn btn-dark btn-sm w-100 mt-3 show-btn" %>
        </div>
      </div>
    </div>
  <% end %>
</div>