<div class="classlist-show-container mt-4" style="padding: 0 20px;">
  <!-- Card Header + Body -->
  <div class="classlist-card" style="background-color: #ffffff; border-radius: 10px; box-shadow: 0 4px 10px rgba(0,0,0,0.1); overflow: hidden;">
    <div class="classlist-card-header text-white" style="background-color: #8a19cc; padding: 20px 25px;">
      <h3 class="m-0">Classlist Details</h3>
    </div>
    <div class="classlist-card-body" style="padding: 20px 25px;">
      <p class="mb-2"><strong>Student:</strong> <%= @classlist.student.name %></p>
      <p class="mb-2"><strong>Section:</strong> <%= @classlist.section.name %></p>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="classlist-actions d-flex gap-2 mt-4">
    <%= link_to "Back to Classlists", classlists_path,
        class: "action-btn back-btn",
        style: "background-color: #7e57c2; color: #ffffff; border-radius: 5px; padding: 10px 18px;" %>

    <%= link_to "Edit Classlist", edit_classlist_path(@classlist),
        class: "action-btn btn-sm",
        style: "background-color: #343a40; color: #ffffff; border-radius: 5px; padding: 10px 18px;" %>

    <%= button_to "Delete Classlist", @classlist,
        method: :delete, data: { confirm: 'Are you sure?' },
        class: "action-btn btn-sm",
        style: "background-color: #ef5350; color: #ffffff; border-radius: 5px; padding: 10px 18px;" %>
  </div>
</div>
