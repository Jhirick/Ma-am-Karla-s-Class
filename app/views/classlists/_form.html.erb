<%= form_with(model: classlist) do |form| %>
  <% if classlist.errors.any? %>
    <div class="alert alert-danger rounded-3">
      <h5><%= pluralize(classlist.errors.count, "error") %> prohibited this classlist from being saved:</h5>
      <ul>
        <% classlist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :student_id, "Student", class: "form-label fw-semibold" %>
    <%= form.collection_select :student_id, Student.all, :id, :name,
      { prompt: "Select a student" },
      class: "form-select rounded-3" %>
  </div>

  <div class="mb-3">
    <%= form.label :section_id, "Section", class: "form-label fw-semibold" %>
    <%= form.collection_select :section_id, Section.all, :id, :name,
      { prompt: "Select a section" },
      class: "form-select rounded-3" %>
  </div>

  <div class="text-end">
    <%= form.submit local_assigns[:submit_label] || "Save Classlist",
      class: "btn text-white fw-semibold px-4 py-2",
      style: "background-color: #146c43; border-radius: 8px;" %>
  </div>
<% end %>
