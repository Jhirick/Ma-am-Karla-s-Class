<% content_for :title, @classlist.new_record? ? "New Classlist" : "Edit Classlist" %>

<div class="student-edit-container">

  <!-- Header (Matches Students) -->
  <div class="student-edit-header d-flex align-items-center">
    <i class="bi bi-list-check ms-3 me-2 fs-3"></i>
    <h1>
      <%= @classlist.new_record? ? "Create Classlist" : "Update Classlist" %>
    </h1>
  </div>

  <!-- Form Card -->
  <div class="student-edit-form mt-4">
    <%= render "form",
        classlist: @classlist,
        submit_label: @classlist.new_record? ? "Create Classlist" : "Update Classlist" %>
  </div>

  <!-- Back Button -->
  <div class="mt-4">
    <%= link_to "Back to Classlists",
        classlists_path,
        class: "btn-custom back-btn" %>
  </div>

</div>
