<div class="mt-4" style="padding: 0 20px;">
  <div class="card shadow-sm rounded-4" style="background-color: white; padding: 30px; width: 100%; max-width: 100%; height: auto;">
    <div class="card-header text-white" style="background: linear-gradient(180deg, #6a0dad 0%, #4b0082 100%); border-radius: 12px 12px 0 0;">
      <h3 class="m-0"><%= @classlist.new_record? ? "Create Classlist" : "Update Classlist" %></h3>
    </div>
    <div class="card-body">
      <%= render "form", classlist: @classlist, submit_label: @classlist.new_record? ? "Create Classlist" : "Update Classlist" %>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to "Back to Classlists", classlists_path,
        class: "btn text-white fw-semibold px-4 py-2",
        style: "background-color: #6c757d; border-radius: 8px;" %>
  </div>
</div>
