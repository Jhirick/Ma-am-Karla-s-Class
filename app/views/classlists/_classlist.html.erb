<div class="classlist-card card shadow-sm rounded-4 mb-3">
  <div class="card-body d-flex justify-content-between align-items-center">
    <div>
      <h5 class="fw-semibold mb-1">
        <%= classlist.student.name if classlist.student.present? %>
      </h5>
      <p class="mb-0 text-muted">
        Section: <%= classlist.section.name if classlist.section.present? %>
      </p>
    </div>

    <div class="d-flex gap-2">
      <%= link_to "Show", classlist, class: "btn action-btn btn-dark px-3 py-1" %>
      <%= link_to "Edit", edit_classlist_path(classlist), class: "btn action-btn edit-btn px-3 py-1" %>
      <%= button_to "Delete", classlist, method: :delete, data: { confirm: "Are you sure?" }, class: "btn action-btn delete-btn px-3 py-1" %>
    </div>
  </div>
</div>
