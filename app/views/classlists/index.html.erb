<% content_for :title, "Classlists" %>

<div class="classlists-container">

  <!-- HEADER BAR (MATCH STUDENT / TEACHER) -->
  <div class="page-header-bar d-flex justify-content-between align-items-center">

    <h1 class="m-0 text-white me-4">Classlists</h1>

    <!-- SEARCH BAR (STUDENT STYLE) -->
    <div class="input-group search-bar me-auto">
      <input
        type="text"
        class="form-control"
        placeholder="Search Classlists..."
        aria-label="Search"
      >
      <span class="input-group-text">
        <i class="bi bi-search"></i>
      </span>
    </div>

    <!-- NEW CLASSLIST BUTTON -->
    <%= link_to "New Classlist",
        new_classlist_path,
        class: "btn-new ms-4" %>

  </div>

  <!-- CLASSLIST CARDS -->
  <div class="classlist-grid">

    <% @classlists.each do |classlist| %>
      <div class="classlist-item">

        <div class="card classlist-card">

          <div class="card-body d-flex flex-column">

            <h5 class="card-title mb-2">
              <%= classlist.student.name %>
            </h5>

            <p class="card-text mb-3">
              <strong>Section:</strong> <%= classlist.section.name %>
            </p>

            <%= link_to "Show Classlist",
                classlist_path(classlist),
                class: "btn btn-sm w-100 mt-auto show-btn" %>

          </div>
        </div>

      </div>
    <% end %>

  </div>

</div>
