<% content_for :title, "Classlists" %>

<div class="classlist-page">

  <!-- HEADER BAR -->
  <div class="page-header-bar d-flex justify-content-between align-items-center mb-0">
    <h1 class="m-0 text-white me-4">Classlists</h1>

    <!-- Search -->
    <div class="input-group search-bar me-auto">
      <input type="text"
             class="form-control"
             placeholder="Search Classlists..."
             aria-label="Search">
      <span class="input-group-text">
        <i class="bi bi-search"></i>
      </span>
    </div>

    <!-- New Button -->
    <%= link_to "New Classlist", new_classlist_path, class: "btn btn-light ms-4" %>
  </div>

  <!-- TABLE CARD -->
  <div class="table-scroll-container mt-3">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Student</th>
          <th>Section</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @classlists.each do |classlist| %>
          <tr>
            <td><%= classlist.student&.name %></td>
            <td><%= classlist.section&.name %></td>
            <td>
              <%= link_to "Show", classlist, class: "btn btn-sm btn-show" %>
              <%= link_to "Edit", edit_classlist_path(classlist), class: "btn btn-sm btn-warning" %>
              <%= button_to "Delete",
                    classlist,
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
