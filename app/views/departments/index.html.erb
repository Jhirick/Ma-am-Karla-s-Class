<div class="d-flex justify-content-end mb-2">
  <%= link_to "New Department", new_department_path, class: "btn btn-success mt-3" %>
</div>

<div class="departments-header px-3">
  <h1 class="m-0">Departments</h1>
</div>

<div class="row mt-3">
  <% @departments.each do |department| %>
    <div class="col-md-2 col-sm-6 mb-4">
      <div class="card department-card shadow-sm rounded-4 overflow-hidden">
        <div class="card-body d-flex flex-column">
          <div class="d-flex justify-content-between align-items-start">
            <h5 class="card-title mb-1"><%= department.name %></h5>
          </div>

          <p class="card-text mb-3"><%= department.location %></p>

          <%= link_to "Show Department", department_path(department),
            class: "btn btn-sm w-100 mt-auto show-btn" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
