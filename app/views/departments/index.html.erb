<div class="departments-container">

  <!-- Header (MATCH STUDENT INDEX STRUCTURE) -->
  <div class="departments-header d-flex justify-content-between align-items-center mb-0">

    <h1 class="m-0 text-white me-4">Departments</h1>

    <!-- Search Bar (SAME AS STUDENT SEARCH BAR) -->
    <div class="input-group search-bar me-auto">
      <input
        type="text"
        class="form-control"
        placeholder="Search Departments..."
        aria-label="Search Departments"
      >
      <span class="input-group-text">
        <i class="bi bi-search"></i>
      </span>
    </div>

    <!-- New Department Button -->
    <%= link_to "New Department",
        new_department_path,
        class: "btn btn-light ms-4 fw-semibold" %>

  </div>

  <!-- Department Cards -->
  <div class="row mt-3">
    <% @departments.each do |department| %>
      <div class="col-md-2 col-sm-6 mb-4">
        <div class="card department-card">
          <div class="card-body d-flex flex-column">

            <h5 class="card-title mb-1">
              <%= department.name %>
            </h5>

            <p class="card-text mb-3">
              <%= department.location %>
            </p>

            <%= link_to "Show Department",
                department_path(department),
                class: "btn btn-sm w-100 mt-auto show-btn" %>

          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
