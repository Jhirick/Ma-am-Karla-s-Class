<% content_for :title, "Editing Department" %>

<div class="department-edit-container w-100 px-0 mx-0">
  <div class="department-edit-header d-flex align-items-center">
    <i class="bi bi-building-fill-gear ms-3 me-2 fs-3"></i>
    <h1>Update Department Information</h1>
  </div>

  <div class="department-edit-form mt-3">
    <%= form_with(model: @department, local: true) do |form| %>
      <div class="form-group mb-3">
        <%= form.label :name, "Department Name", class: "form-label fw-bold" %>
        <%= form.text_field :name, class: "form-control shadow-sm", placeholder: "Enter department name" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :location, "Location", class: "form-label fw-bold" %>
        <%= form.text_field :location, class: "form-control shadow-sm", placeholder: "Enter location" %>
      </div>

      <div class="mt-4 text-end">
        <%= form.submit "Update Department", class: "btn btn-success px-4 py-2 fw-bold rounded-1" %>
      </div>
    <% end %>
  </div>

  <div class="department-actions-container mt-3" style="text-align: left;">
    <div class="department-actions d-flex gap-2 ms-3 mb-3" style="justify-content: flex-start; width: 100%;">
      <%= link_to "Back to Departments", departments_path, class: "action-btn back-btn" %>
      <%= link_to "Show this Department", @department, class: "action-btn btn-sm", style: "background-color: #343a40; color: white;" %>
    </div>
  </div>
</div>
