<% content_for :title, "New Staff" %>

<div class="student-edit-container">

  <!-- Purple Header (Matches Student New) -->
  <div class="student-edit-header d-flex align-items-center">
    <i class="bi bi-person-badge-fill ms-3 me-2 fs-3"></i>
    <h1>Create Staff</h1>
  </div>

  <!-- White Card Form -->
  <div class="student-edit-form mt-4">
    <%= render "form", staff: @staff %>
  </div>

  <!-- Back Button -->
  <div class="mt-4">
    <%= link_to "Back to Staff",
        staffs_path,
        class: "btn-custom back-btn" %>
  </div>

</div>
