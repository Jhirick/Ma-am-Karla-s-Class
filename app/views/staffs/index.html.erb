<% content_for :title, "Staff" %>

<div class="staffs-container">

  <!-- HEADER BAR -->
  <div class="page-header-bar d-flex align-items-center justify-content-between mb-3">

    <h1 class="m-0 text-white me-4">Staff</h1>

    <!-- SEARCH BAR (MATCH STUDENT) -->
    <div class="input-group search-bar me-auto">
      <input
        type="text"
        class="form-control"
        placeholder="Search Staff..."
        aria-label="Search Staff"
      >
      <span class="input-group-text">
        <i class="bi bi-search"></i>
      </span>
    </div>

    <!-- NEW STAFF BUTTON -->
    <%= link_to "New Staff",
        new_staff_path,
        class: "btn btn-light ms-4" %>

  </div>

  <!-- STAFF CARDS -->
  <div class="row mt-3">
    <% @staffs.each do |staff| %>
      <div class="col-md-3 col-sm-6 mb-4">

        <div class="card staff-card h-100 rounded-4">
          <div class="card-body d-flex flex-column">

            <h5 class="card-title mb-2 fw-bold">
              <%= staff.name %>
            </h5>

            <p class="card-text mb-3 text-muted">
              <strong>Department:</strong>
              <%= staff.department&.name || "â€”" %>
            </p>

            <%= link_to "Show Staff",
                staff_path(staff),
                class: "btn btn-sm w-100 mt-auto show-btn" %>

          </div>
        </div>

      </div>
    <% end %>
  </div>

</div>
