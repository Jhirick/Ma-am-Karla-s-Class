<% content_for :title, "New Student Guardian" %>

<div class="guardian-new-container w-100 px-0 mx-0">
  <div class="guardian-new-header d-flex align-items-center">
    <i class="bi bi-people-fill ms-3 me-2 fs-3"></i>
    <h1>Create Student-Guardian Relationship</h1>
  </div>

  <div class="guardian-new-form mt-3">
    <%= form_with(model: @student_guardian, local: true) do |form| %>

      <div class="form-group mb-3">
        <%= form.label :student_id, "Select Student", class: "form-label fw-bold" %>
        <%= form.collection_select :student_id, Student.all, :id, :name, { prompt: "Choose student" }, class: "form-select shadow-sm" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :guardian_id, "Select Guardian", class: "form-label fw-bold" %>
        <%= form.collection_select :guardian_id, Guardian.all, :id, :name, { prompt: "Choose guardian" }, class: "form-select shadow-sm" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :relationship, "Relationship", class: "form-label fw-bold" %>
        <%= form.text_field :relationship, class: "form-control shadow-sm", placeholder: "e.g., Mother, Father, Aunt" %>
      </div>

      <div class="mt-4 text-end">
        <%= form.submit "Create Relationship", class: "btn btn-success px-4 py-2 fw-bold rounded-2" %>
      </div>

    <% end %>
  </div>

  <div class="guardian-actions-container mt-3">
    <div class="guardian-actions d-flex gap-2 ms-3 mb-3" style="justify-content: flex-start; width: 100%;">
      <%= link_to "Back to Relationships", student_guardians_path, class: "action-btn back-btn" %>
    </div>
  </div>
</div>
