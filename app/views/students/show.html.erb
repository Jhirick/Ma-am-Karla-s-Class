<div class="student-show-container">
  <div class="card student-card shadow-sm">
    <div class="card-header d-flex align-items-center">
      <i class="bi bi-person-vcard-fill ms-1 me-3 fs-1"></i>
      <div>
        <h3 class="student-name mb-0"><%= @student.name %></h3>
        <p class="student-subinfo mb-0">
          <%= @student.program %> | <%= @student.department.name %>
        </p>
      </div>
    </div>

    <div class="card-body">
      <p><strong>Year Level:</strong> <%= @student.year_level %></p>
      <p><strong>Total Assessment:</strong> â‚±<%= number_with_precision(@student.total_assessment, precision: 2) %></p>
      <p><strong>Total Units:</strong> <%= @student.number_of_units %></p>
      <p><strong>Number of Guardians:</strong> <%= @student.number_of_guardians %></p>
    </div>
  </div>



  <h4 class="subject-list-title">ðŸ“š List of Subjects</h4>
  <table class="table table-bordered subject-table">
    <thead>
      <tr>
        <th>Section</th>
        <th>Subject</th>
        <th>Units</th>
        <th>Teacher</th>
      </tr>
    </thead>
    <tbody>
      <% @student.classlists.each do |classlist| %>
        <tr>
          <td><%= classlist.section.name %></td>
          <td><%= classlist.section.subject.name %></td>
          <td><%= classlist.section.subject.number_of_units %></td>
          <td><%= classlist.section.subject.teacher.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="student-actions-container">
  <div class="student-actions">
    <%= link_to "Back to Students", students_path, class: "action-btn back-btn" %>
    <%= link_to "Edit Student", edit_student_path(@student), class: "action-btn edit-btn" %>
    <%= link_to "Delete Student", "#",
            class: "action-btn delete-btn",
            data: { 
              bs_toggle: "modal", 
              bs_target: "#confirmDeleteModal", 
              student_url: student_path(@student) 
            } %>
  </div>

<!-- Bootstrap Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="confirmDeleteLabel">Confirm Delete</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this student?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="#" id="confirmDeleteBtn" class="btn btn-danger">Delete</a>
      </div>
    </div>
  </div>
</div>

</div>

