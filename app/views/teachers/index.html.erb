<% content_for :title, "Teachers" %>

<div class="teachers-container">

  <!-- HEADER -->
  <div class="teachers-header mb-4">
  <h1>Teachers</h1>

  <!-- SEARCH -->
 <div class="input-group search-bar ms-3">
  <input type="text"
         class="form-control"
         placeholder="Search Teachers..."
         aria-label="Search">
  <span class="input-group-text">
    <i class="bi bi-search"></i>
  </span>
</div>

  <!-- NEW TEACHER (RIGHT SIDE) -->
  <%= link_to "New Teacher", new_teacher_path, class: "btn-new-teacher ms-auto" %>
</div>

  <!-- TEACHER CARDS -->
  <div class="row">
    <% @teachers.each do |teacher| %>
      <div class="col-md-3 mb-4">
        <div class="card teacher-card h-100 text-center p-3">

          <!-- ICON -->
          <div class="mb-3">
            <i class="bi bi-person-circle" style="font-size: 3rem;"></i>
          </div>

          <div class="card-body p-2">
            <h5 class="card-title mb-2"><%= teacher.name %></h5>

            <div class="text-start">
              <p class="card-text mb-1"><strong>Email:</strong> <%= teacher.email %></p>
              <p class="card-text mb-1"><strong>Specialization:</strong> <%= teacher.specialization %></p>
              <p class="card-text mb-3"><strong>Status:</strong> <%= teacher.status %></p>
            </div>

            <!-- BUTTON -->
            <%= link_to "Show Teacher", teacher, class: "show-btn w-100 d-block text-center" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
