  /* --- KEY CHANGE FOR BALANCING --- */
  .space-y-3 { --tw-space-y-reverse: 0; margin-top: 0.5rem; margin-bottom: 0.5rem; } 
  .space-y-2 > div { margin-top: 0.5rem; margin-bottom: 0.5rem; } 
  /* -------------------------------- */
  
