<style>
/* =============================
   OUTER WHITE CARD
============================= */
.content-card-container {
  background-color: white;
  border-radius: 25px;
  height: calc(100vh - 40px);
  width: 100%;
  padding: 0px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* =============================
   CV ROOT
============================= */
.cv-page {
  height: 100%;
  width: 100%;
  padding: 0;
  background: transparent;
  display: flex;
  flex-direction: column;
}

/* =============================
   CV GRID
============================= */
.cv-grid {
  display: grid;
  grid-template-columns: 340px 1fr;
  gap: 10px;
  height: 100%;
}

/* =============================
   LEFT & RIGHT COLUMNS
============================= */
.cv-left,
.cv-right {
  display: flex;
  flex-direction: column;
  gap: 10px;
  height: 100%;
}

/* Stretch all cards except Profile, except auto-fit cards */
.cv-left .cv-card:not(.profile-card):not(.auto-fit-card),
.cv-right .cv-card:not(.auto-fit-card) {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* =============================
   CV CARD
============================= */
.cv-card {
  background-color: #111;
  border-radius: 18px;
  padding: 14px;
  color: #eee;
  display: flex;
  flex-direction: column;
}

/* =============================
   AUTO-FIT CARDS
============================= */
.auto-fit-card {
  flex: unset;
  display: block;
  height: auto;
}

/* =============================
   PROFILE CARD SPECIFIC
============================= */
.profile-card {
  background: linear-gradient(160deg, #1c1c1c, #0f0f0f);
}

.profile-img-wrapper {
  width: 130px;
  height: 130px;
  margin: 0 auto 10px;
  border-radius: 50%;
  padding: 4px;
  background: linear-gradient(135deg, #9b5cff, #6a0dad);
}

.profile-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.cv-name {
  margin: 6px 0 2px;
  font-weight: 700;
}

.cv-role {
  color: #b388ff;
  font-size: 0.9rem;
  margin-bottom: 8px;
}

.cv-contact-list div {
  font-size: 0.8rem;
  opacity: 0.85;
}

/* =============================
   SECTION TITLES
============================= */
.cv-section-title {
  border-left: 3px solid #9b5cff;
  padding-left: 8px;
  font-size: 0.9rem;
  margin-bottom: 8px;
}

/* =============================
   SKILLS
============================= */
.skill-item {
  margin-bottom: 6px;
  font-size: 0.8rem;
}

.progress {
  height: 5px;
  background: #2b2b2b;
  border-radius: 10px;
  margin-top: 4px;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #9b5cff, #6a0dad);
}

/* =============================
   LISTS
============================= */
.cv-list {
  padding-left: 16px;
  font-size: 0.8rem;
}

/* =============================
   TEXT
============================= */
.cv-text {
  font-size: 0.78rem;
  line-height: 1.4;
  opacity: 0.85;
}

/* =============================
   TIMELINE ITEMS
============================= */
.cv-timeline-item {
  margin-bottom: 6px;
}

.cv-sub {
  display: block;
  color: #b388ff;
  font-size: 0.8rem;
}

.cv-date {
  font-size: 0.72rem;
  opacity: 0.7;
}

/* =============================
   COMPETENCY TAGS
============================= */
.competency-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
}

.competency-tags span {
  background: rgba(155, 92, 255, 0.15);
  padding: 4px 10px;
  border-radius: 20px;
  font-size: 0.68rem;
  color: #d6c4ff;
}

/* =============================
   RESPONSIVE
============================= */
@media (max-width: 992px) {
  .cv-grid {
    grid-template-columns: 1fr;
    height: auto;
  }

  .cv-page {
    overflow: auto;
  }

  .cv-left .cv-card,
  .cv-right .cv-card {
    flex: unset;
  }
}
</style>
