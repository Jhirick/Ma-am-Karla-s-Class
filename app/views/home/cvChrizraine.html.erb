<style>
/* ===== BASE CONTAINER ===== */
.content-card-container {
  background: linear-gradient(180deg, #f7f4ff, #ede7ff);
  border-radius: 26px;
  padding: 5px;
  box-sizing: border-box;
  width: 100%;
  max-width: 100%;
  overflow: hidden;
}

/* ===== GRID ===== */
.cv-grid {
  display: grid;
  grid-template-columns: 300px 1fr;
  gap: 18px;
}

.cv-left,
.cv-right {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

/* ===== CARD ===== */
.cv-card {
  position: relative;
  background: linear-gradient(160deg, #1e1b2e, #141225);
  border-radius: 18px;
  padding: 12px;
  color: #f1edff;
  box-shadow: 0 14px 30px rgba(104,43,215,0.35);
  overflow: hidden;
}

/* accent stripe */
.cv-card::before {
  content: "";
  position: absolute;
  top: 12px;
  left: 0;
  width: 4px;
  height: calc(100% - 24px);
  background: linear-gradient(180deg, #682bd7, #9c6bff);
  border-radius: 10px;
}

/* ===== PROFILE ===== */
.profile-img-wrapper {
  width: 76px;
  height: 76px;
  margin: 0 auto 10px;
  border-radius: 12px;   /* ‚¨Ö square with rounded corners */
  padding: 3px;
  background: conic-gradient(from 180deg, #682bd7, #9c6bff, #682bd7);
}

.profile-img {
  width: 100%;
  height: 100%;
  border-radius: 8px;    /* ‚¨Ö remove circle */
  object-fit: cover;
}

.cv-name {
  font-size: 1.15rem;
  margin: 6px 0 2px;
}

.cv-role {
  font-size: 0.7rem;
  letter-spacing: 1px;
  color: #bda8ff;
  text-transform: uppercase;
  margin-bottom: 8px;
}

.cv-contact-list div {
  font-size: 0.72rem;
  opacity: 0.85;
}

/* ===== TITLES ===== */
.cv-section-title {
  font-size: 0.8rem;
  letter-spacing: 1px;
  text-transform: uppercase;
  margin-bottom: 8px;
  color: #cbb8ff;
}

/* ===== TEXT ===== */
.cv-text {
  font-size: 0.75rem;
  line-height: 1.5;
  opacity: 0.9;
}

.cv-sub {
  font-size: 0.72rem;
  color: #9c6bff;
}

/* ===== SKILLS ===== */
.skill-item {
  font-size: 0.75rem;
  margin-bottom: 8px;
}

.progress {
  height: 5px;
  background: rgba(255,255,255,0.1);
  border-radius: 10px;
  margin-top: 4px;
}

.progress-bar {
  height: 100%;
  border-radius: 10px;
  background: linear-gradient(90deg, #682bd7, #9c6bff);
}

/* ===== LIST ===== */
.cv-list {
  padding-left: 18px;
  font-size: 0.75rem;
}

/* ===== TAGS ===== */
.competency-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.competency-tags span {
  background: rgba(104,43,215,0.2);
  border: 1px solid rgba(156,107,255,0.4);
  padding: 5px 12px;
  border-radius: 30px;
  font-size: 0.65rem;
  color: #efe9ff;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 992px) {
  .cv-grid {
    grid-template-columns: 1fr;
  }
}

/* Make left column stretch */
.cv-left {
  height: 100%;
}

/* Let the bottom two cards expand */
.cv-left .cv-card:nth-child(2),
.cv-left .cv-card:nth-child(3) {
  flex-grow: 1;
}

</style>

