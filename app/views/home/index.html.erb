<div class="home-container">

  <!-- Animated Background: Clouds + Birds -->
  <div class="animated-background">
    <!-- Clouds -->
    <img src="<%= asset_path 'cloud1.png' %>" class="cloud cloud-1">
    <img src="<%= asset_path 'cloud2.png' %>" class="cloud cloud-2">
    <img src="<%= asset_path 'cloud3.png' %>" class="cloud cloud-3">

    <!-- Birds -->
    <img src="<%= asset_path 'birds1.png' %>" class="birds birds-1">
    <img src="<%= asset_path 'birds2.png' %>" class="birds birds-2">
  </div>

  <!-- Header with logo + buttons -->
  <header class="home-header">
    <div class="logo-container">
      <%= image_tag "logo.png", alt: "Logo", class: "site-logo" %>
    </div>

    <div class="header-buttons">
      <%= link_to "Log In", students_path, class: "btn btn-outline-light me-2" %>
      <%= link_to "Sign Up", students_path, class: "btn btn-light" %>
    </div>
  </header>

  <!-- Hero Section -->
  <div class="hero-content text-center">
    <h1 class="display-3 fw-bold mb-4">
      Welcome to <span class="highlight">Hell University</span>
    </h1>

